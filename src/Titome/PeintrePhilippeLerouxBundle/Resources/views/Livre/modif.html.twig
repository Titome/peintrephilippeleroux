{% extends "TitomePeintrePhilippeLerouxBundle::layoutAdmin.html.twig" %}

{% block title %}Modifier le livre {{ livre.nom }}{{ parent() }}{% endblock %}

{% block corps %}
    <div class="container">
        {% if app.session.hasFlash('notice') %}
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert" href="#">x</a>
                <h4 class="alert-heading">{{ app.session.flash('notice') }}</h4>
            </div>
        {% endif %}
        <div class="span12"><h1>Modifier le livre {{ livre.nom }}</h1></div>
	<div class="row-fluid">
            <div class="span6">
		<ul class="thumbnails">
                    <li>
			<div class="thumbnail">
                            <img src="{{ asset(('image/'~livre.couverture) | apply_filter('my_thumb')) }}" alt="{{ livre.nom }}">
			</div>
                    </li>
		</ul>
            </div>
            <div class="span6">
                <div class="well">
                    <ul class="nav nav-list">
                        <li class="nav-header">Livre</li>
                        <li><a href="{{ path('ModifLivreTitre', { 'id' : livre.id }) }}">Modifier le titre</a></li>
                        <li><a href="{{ path('DeleteBook', { 'id' : livre.id }) }}">Supprimer</a></li>
                    </ul>
                </div>
                <div class="well">
                    <ul class="nav nav-list">
                        <li class="nav-header">Page</li>
                        <li><a href="{{ path('AjoutPage', { 'livreId' : livre.id }) }}">Ajout</a></li>
                        <li><a href="{{ path('DeleteViewPage', { 'id' : livre.id }) }}">Supprimer</a></li>
                    </ul>
                </div>
            </div>
	</div>
    </div>
{% endblock %}