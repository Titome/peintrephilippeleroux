{% extends "TitomePeintrePhilippeLerouxBundle::layoutAdmin.html.twig" %}

{% block title %}Galerie - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Galerie</h1>
    
    <table>
        {% set i = 0 %}
            
        {% for image in images %}
            {% if i == 2 or i == 0 %}
                <tr>
            {% endif %}
                    <td>
                        <p>{{ image.legende }}</p>
                        <img src="{{ asset(['image/', image.nom]|join) }}" alt="{{ image.legende }}" />
                    </td>
            {% set i = i + 1 %}    
            {% if i == 2 or i == 0%}
                </tr>
                {% set i = 0 %}
            {% endif %}
        {% else %}
            <p>Pas encore d'image !</p>
        {% endfor %}
    </table>
{% endblock %}