<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Peintre Philippe Leroux{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        {% image '@TitomePeintrePhilippeLerouxBundle/Resources/public/img/favicon.ico' %}
            <link rel="shortcut icon" href="{{ asset_url }}" />
        {% endimage %}
    </head>
    <body {% block body_class %}{% endblock %}>
        {% block body %}
            {% block nav %}{% endblock %}
            {% block corps %}{% endblock %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                '@TitomePeintrePhilippeLerouxBundle/Resources/public/js/jquery-1.7.2.min.js'
                '@TitomePeintrePhilippeLerouxBundle/Resources/public/js/bootstrap.min.js'
                '@TitomePeintrePhilippeLerouxBundle/Resources/public/zoombox/zoombox.js'
                '@TitomePeintrePhilippeLerouxBundle/Resources/public/js/turn.min.js'
                output='main.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
                
            <script>
                $('.carousel').carousel({
                    interval: 4000
                })
            </script>
            
            <!-- Piwik -->
            <script type="text/javascript">
            var pkBaseURL = (("https:" == document.location.protocol) ? "https://peintrephilippeleroux.timotheegirard.com/piwik/" : "http://peintrephilippeleroux.timotheegirard.com/piwik/");
            document.write(unescape("%3Cscript src='" + pkBaseURL + "piwik.js' type='text/javascript'%3E%3C/script%3E"));
            </script><script type="text/javascript">
            try {
            var piwikTracker = Piwik.getTracker(pkBaseURL + "piwik.php", 1);
            piwikTracker.trackPageView();
            piwikTracker.enableLinkTracking();
            } catch( err ) {}
            </script><noscript><p><img src="http://peintrephilippeleroux.timotheegirard.com/piwik/piwik.php?idsite=1" style="border:0" alt="" /></p></noscript>
            <!-- End Piwik Tracking Code -->
        {% endblock %}
    </body>
</html>
